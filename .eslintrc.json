{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb",
        "plugin:@typescript-eslint/recommended",
        "prettier/typscript-eslint",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never",
                "tsx": "never"
            }
        ],
        "prettier/prettier": "error",
        "react-hooks/rules-of-hoojs": "error",
        "react-hooks/exhaustive-deps": "warn",
        "react/jsx-filename-extension":  [1, {"extension": [".tsx"]}],
        "import/prefer-default-export": "off"

    },
    "settings": {
        "import/resolver": {
            "typescript": {}

        }
    }
}

